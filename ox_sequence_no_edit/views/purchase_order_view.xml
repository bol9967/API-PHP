<odoo>
    <record model="ir.ui.view" id="purchase_order_edit_sequence_form_view">
        <field name="name">purchase.order.edit.sequence.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="purchase_edit_sequence" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">purchase_edit_sequence == True</attribute>
            </xpath>
        </field>
    </record>
</odoo>