<odoo>
    <record model="ir.ui.view" id="account_move_hide_desc_form_view">
        <field name="name">account.move.hide.desc.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='partner_id']" position="before">
                <field name="invoice_edit_sequence" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">invoice_edit_sequence == True</attribute>
            </xpath>
        </field>
    </record>
</odoo>