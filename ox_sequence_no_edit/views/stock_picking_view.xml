<odoo>
    <record model="ir.ui.view" id="stock_picking_edit_sequence_form_view">
        <field name="name">stock.picking.edit.sequence.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="stock_picking_edit_sequence" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">stock_picking_edit_sequence == True</attribute>
            </xpath>
        </field>
    </record>
</odoo>