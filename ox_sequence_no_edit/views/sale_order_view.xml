<odoo>
    <record model="ir.ui.view" id="sale_order_edit_sequence_form_view">
        <field name="name">sale.order.edit.sequence.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="edit_sequence" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">edit_sequence == True</attribute>
            </xpath>
        </field>
    </record>
</odoo>